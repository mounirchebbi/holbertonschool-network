#!/usr/bin/env bash
# Script that edits /etc/hosts:
# Resolve localhost to 127.0.0.2
# Resolve facebook.com to 8.8.8.8

# Backup the original /etc/hosts
sudo cp /etc/hosts /etc/hosts.bak

# Create new hosts content and write it directly
{
    sudo grep -v 'localhost\|facebook.com' /etc/hosts
    echo "127.0.0.2 localhost"
    echo "8.8.8.8 facebook.com"
} | sudo tee /etc/hosts > /dev/null
